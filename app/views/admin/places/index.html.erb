<h1><%= t("admin.place") %></h1>
<div class="form-group">
  <%= link_to new_admin_place_path, class: "btn btn-success" do %>
    <span class="fa fa-plus"></span><%= t("admin.places.add_new") %>
  <% end %>
</div>

<div class="col-sm-3">
  <%= search_form_for [:admin, @q] do |f| %>
    <div class="form-group">
      <%= f.text_field :name_or_description_or_long_description_cont, class:"form-control", placeholder: t("admin.places.look_for")%>
      <%= f.text_field :price_gt, class:"form-control", placeholder: t("admin.places.price_gt") %>
    </div>
    <%= f.submit t("admin.places.search"), class:"btn btn-primary" %>
  <% end %>
</div>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, t("admin.places.name")) %></th>
      <th><%= sort_link(@q, :price, t("admin.places.price")) %></th>
       <th><%= t("admin.places.category") %></th>
       <th><%= t("admin.places.country") %></th>
       <th></th>
       <th></th>
    </tr>
    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td><%= number_to_currency place.price %></td>
          <td><%= place.category.name %></td>
          <td><%= place.country.name %></td>
          <td>
             <%= link_to t("edit"), edit_admin_place_path(place), class: "btn btn-info btn-xs" %>
          </td>
          <td>
             <%= link_to t("delete"), admin_place_path(place), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>

<%= paginate @places %>